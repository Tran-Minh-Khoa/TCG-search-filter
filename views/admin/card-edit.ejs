<div class="container-fluid">
  <!-- Page Heading -->
  <div class="row d-flex justify-content-between mb-4">
    <h1 class="h3 mb-2 text-gray-800 col">Card Details</h1>
  </div>
  <div class="card mb-4 p-3 border-bottom-primary row">
    <div class="container-fluid m-0 row">
      <!--Form-->
      <div class="col-md-9">
        <form>
          <!--Form Row-->
          <div class="form-row">
            <!--Card Name-->
            <div class="form-group col-md-8">
              <label for="cardName">Card Name</label>
              <input
                type="text"
                class="form-control"
                id="cardName"
                name="cardName"
                placeholder="Card Name"
              />
            </div>
            <!--Card ID-->
            <div class="form-group col-md-4">
              <label for="cardID">Card ID</label>
              <input
                type="text"
                class="form-control"
                id="cardID"
                name="cardID"
                placeholder="Card ID"
              />
            </div>
          </div>
          <!--End Form Row-->

          <!--Form Row-->
          <div class="form-row">
            <!--Set ID-->
            <div class="form-group col-md-6">
              <label for="setID">Set ID</label>
              <select
                class="form-control custom-select"
                id="setID"
                name="setID"
              >
                <option value="xy">XY</option>
                <option value="sm">Sun and Moon</option>
                <option value="swsh">Sword and Shield</option>
              </select>
            </div>
            <!--Card Rarity-->
            <div class="form-group col-md-6">
              <label for="cardRarity">Card Rarity</label>
              <select
                class="form-control custom-select"
                id="cardRarity"
                name="cardRarity"
              >
                <option value="common">Common</option>
                <option value="uncommon">Uncommon</option>
                <option value="rare">Rare</option>
                <option value="promo">Promo</option>
              </select>
            </div>
          </div>
          <div class="form-row">
            <!--Types-->
            <div class="form-group col-md-6">
              <label for="type">Type</label>
              <select class="form-control custom-select" id="type" name="type">
                <option value="grass">Grass</option>
                <option value="fire">Fire</option>
                <option value="water">Water</option>
                <option value="electric">Electric</option>
                <option value="psychic">Psychic</option>
                <option value="fighting">Fighting</option>
                <option value="darkness">Darkness</option>
                <option value="metal">Metal</option>
                <option value="dragon">Dragon</option>
                <option value="fairy">Fairy</option>
                <option value="colorless">Colorless</option>
              </select>
            </div>
            <!--Super Types-->
            <div class="form-group col-md-6">
              <label for="supertypes">Supertypes</label>
              <div class="dropdown">
                <button
                  class="btn btn-secondary dropdown-toggle"
                  type="button"
                  id="supertypesDropdown"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  Select Supertypes
                </button>
                <div
                  class="dropdown-menu p-3"
                  aria-labelledby="supertypesDropdown"
                >
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="basic"
                      name="supertypes[]"
                      value="Basic"
                    />
                    <label class="form-check-label" for="basic">Basic</label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="stage1"
                      name="supertypes[]"
                      value="Stage 1"
                    />
                    <label class="form-check-label" for="stage1">Stage 1</label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="stage2"
                      name="supertypes[]"
                      value="Stage 2"
                    />
                    <label class="form-check-label" for="stage2">Stage 2</label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="ex"
                      name="supertypes[]"
                      value="EX"
                    />
                    <label class="form-check-label" for="ex">EX</label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="gx"
                      name="supertypes[]"
                      value="GX"
                    />
                    <label class="form-check-label" for="gx">GX</label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="mega"
                      name="supertypes[]"
                      value="MEGA"
                    />
                    <label class="form-check-label" for="mega">MEGA</label>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!--End Form Row-->

          <!--Form Row-->
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="price">Price</label>
              <input
                type="text"
                class="form-control"
                id="price"
                name="price"
                placeholder="Price"
              />
            </div>
            <div class="form-group col-md-6">
              <label for="amount">Amount</label>
              <input
                type="text"
                class="form-control"
                id="amount"
                name="amount"
                placeholder="Amount"
              />
            </div>
          </div>
          <!--End Form Row-->

          <!--Form Row-->
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="picture">Upload Picture</label>

              <form id="imageForm" enctype="multipart/form-data">
                <input
                  type="file"
                  id="fileInput"
                  accept="image/*"
                  onchange="previewImage()"
                  required
                />
              </form>
            </div>
          </div>
          <!--End Form Row-->
        </form>
      </div>
      <!--Image-->
      <div class="col-md-3">
        <!-- Preview area for the uploaded image -->
        <div class="row-1">
          <h6 class="mb-1 font-weight-bold">Card image preview</h6>
        </div>
        <div class="d-flex justify-content-center">
          <div class="card-body p-0">
            <img
              id="preview-image"
              alt="Card Preview"
              src="/img/card-back.png"
              class="img-fluid"
            />
          </div>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-end">
      <div class="col-md-12">
        <a href="/admin/card">
          <button type="button" class="btn btn-primary" id="confirmBtn">
            Confirm
          </button>
        </a>
        <a href="/admin/card">
          <button type="button" class="btn btn-secondary" id="cancelBtn">
            Cancel
          </button>
        </a>
      </div>
    </div>
  </div>
</div>
